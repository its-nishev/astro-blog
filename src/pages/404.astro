---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class="pt-[56px]">
			<Content>
				<section>
					<h1 class="text-7xl text-center mt-12 mb-8 pt-10 pd-10">Not Found! The Post you are looking for seems to have been removed. Sorry</h1>
					<div class="text-center py-4 pt-10 pd-10">
						<a href="/" class="inline-flex items-center gap-1 underline underline-offset-2 decoration-orange-500">Go to Index</a>
					</div>
				</section>
			</Content>
		</main>
		<Footer />
	</Body>
</html>
